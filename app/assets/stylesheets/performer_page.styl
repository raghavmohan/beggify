.top
  position: absolute
  top: 0px
  height: 20%
  width: 100%
  margin-top: 20px
  text-align: center
  display: table
  .street_name
    line-height: 1em
    font-size: 3em
    margin-bottom: 20px
  .rating
    i
      font-size: 1.5em
      margin: 10px
.middle
  position: absolute
  top: 20%
  height: 40%
  width: 100%
  table 
    position: relative
    margin: auto
    margin-top: 50px
    font-size: 2em
    font-weight: 200
    margin-top: 50px
    td.first
      text-align: center
      width: 40px
      line-height: 2em
      vertical-align: bottom
      i
        margin-top: 8px
        width: 36px
        height: 36px
        font-size: 1em
    div
      font-weight: 200
      font-size: 1.8em
      margin: 20px
.bottom
  position: absolute
  top: 60%
  height: 40%
  width: 100%
  form
    width: 200px
    margin: auto
    input[type=submit]
      border: none
      background: none
      border-radius: 0px
      background-image: url('pay.png')
      background-size: 100%
      background-repeat: no-repeat
      background-position: center
      box-shadow: none
      margin: auto
      width: 200px
      height: 200px
