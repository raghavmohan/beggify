<h1>My Performances</h1>

<% @performances.each do |performance| %>
  <tr>
    <td><%= performance.name %></td>
    <td><%= performance.start_time %></td>
    <td><%= performance.end_time %></td>
    <td><%= performance.latitude %></td>
    <td><%= performance.longitude %></td>
    <td><%= link_to 'Show', performer_performance_path(@performer, performance) %></td>
    <td><%= link_to 'Edit', edit_performer_performance_path(@performer, performance) %></td>
    <td><%= link_to 'Destroy', performer_performance_path(@performer, performance), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Performance', new_performer_performance_path %>
